
@{
    Layout = null;
    ViewData["Title"] = "Admin Login";
}

@model FishForCash.Web.Models.AdminLoginViewModel

@{
    ViewData["Title"] = "Login";
}
<link href="~/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation/dist/additional-methods.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<style>
    .profile-img-card {
        width: 96px;
        height: 96px;
        margin: 0 auto 10px;
        display: block;
        -moz-border-radius: 50%;
        -webkit-border-radius: 50%;
        border-radius: 50%;
    }

    input.input-validation-error,
    textarea.input-validation-error,
    select.input-validation-error {
        border: 1px solid #CD0A0A;
    }
</style>
<body style="background:cadetblue;">
    <div class="container body-content">
        <div class="row">
            <div class="col-md-5 mx-auto mt-5 py-5 px-5" style="background:#fff; box-shadow: 0px 0px 1px 2px #0000001a;">
                <img id="profile-img" class="profile-img-card" src="~/img/Admin.png" />

                <form asp-action="Login" asp-controller="Admin">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label asp-for="EmailId" class="control-label"></label>
                        <input asp-for="EmailId" class="form-control" />
                        <span asp-validation-for="EmailId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label"></label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>

        <div>
        </div>
    </div>
</body>
