@model IEnumerable<FishForCash.Domain.AlreadyPlayed.AlreadyplayedModel>
@{
    ViewData["Title"] = "AlreadyplayedCode";
    Layout = "_AdminLayout";
}

<!-- MAIN CONTENT-->
<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <h3 class="title-2 m-b-25">Already Played Errors</h3>
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table  table-striped table-earning table-hover">
                            <thead>
                                <tr>
                                   
                                    <th>
                                       Date Played
                                    </th>
                                    <th>
                                        Code
                                    </th>
                                    <th>
                                      Recorded Winner
                                    </th>
                                    <th>
                                        Recorded Winners Email
                                    </th>

                                    <th>
                                        Replacement to
                                    </th>

                                    <th>
                                        Send Replacement
                                    </th>

                                    <th>
                                       Delete
                                    </th>
                                    
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.PlayedDatestr</td>
                                    <td>@item.GameCode</td>
                                    <td>@item.FullName</td>
                                    <td><a asp-action="PlayerDashboard" asp-controller="Admin" asp-route-playerId="@item.PLayerId" >@item.PlayerEmail</a></td>
                                    <td><a asp-action="PlayerDashboard" asp-controller="Admin" asp-route-playerId="@item.CureentPlayerId" >@item.CurrentPlayerEmail</a></td>

                                    <td> <a asp-controller="Admin" asp-action="SendReplacement" asp-route-playerId="@item.CureentPlayerId" asp-route-forgamecode="@item.GameCode" class="btn btn-primary btn-block ">Send Replacement</a></td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-block">Delete</a>
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Copyright © 2018 Fish For Cash. All rights reserved.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- END MAIN CONTENT-->
    <!-- END PAGE CONTAINER-->
</div>

