@model FishForCash.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "ForgotPassword";
}

<div class="col-md-5 mx-auto mt-5 py-5 px-5" style="background:#fff; box-shadow: 0px 0px 1px 2px #0000001a;">
    <div class="row">
        <div class="col-md-12">
            <h5 class="text-danger">Login Error !</h5>
            <h6 class="text-danger">Incorrect Combination of Email or Password.</h6>
            <h6 class="text-danger">Please retyping your email address or password.</h6>
        </div>
        </div></div>

        <div class="col-md-5 mx-auto mt-5 py-5 px-5" style="background:#fff; box-shadow: 0px 0px 1px 2px #0000001a;">
            <div class="row">


                <div class="col-md-12">
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="text-center">
                                <h3><i class="fa fa-lock fa-4x"></i></h3>
                                <h2 class="text-center">Forgot Password?</h2>
                                <p>You can reset your password here.</p>
                                <div class="panel-body">

                                    <form asp-action="ForgotPassword">
                                        <div class="form-group">
                                            <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                                <input asp-for="EmailId" placeholder="Email address" class="form-control" type="email">
                                                <span asp-validation-for="EmailId" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Reset Password" type="submit">
                                        </div>
                                    </form>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

