@model IEnumerable<FishForCash.Domain.Player.PlayerModel>

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}




    <!-- MAIN CONTENT-->
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">

                <div class="row">
                    <div class="col-lg-12">
                        <h3 class="title-2 m-b-25">Search Results For ("@ViewBag.SearchData")</h3>
                        <div class="table-responsive table--no-card m-b-40">
                            <table class="table  table-striped table-earning table-hover">
                                <thead >
                                    <tr>
                                        <th>

                                        </th>
                                        <th>
                                            Id
                                        </th>
                                        <th>

                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.ScreenName)
                                        </th>
                                        <th>
                                            Name
                                        </th>

                                        <th>
                                            Email
                                        </th>

                                        <th>
                                            Registered
                                        </th>

                                        <th>
                                            Played
                                        </th>
                                        <th>
                                            Address
                                        </th>
                                        <th>
                                            Disabled
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr>
                                        <td>
                                            <a asp-action="PlayerDashboard" asp-controller="Admin" asp-route-playerId="@item.PLayerId" class="btn btn-primary btn-block">View</a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.PLayerId)
                                        </td>
                                        <td>
                                            @if (item.PlayerImage != null)
                                            {
                                                string imreBase64Data = Convert.ToBase64String(item.PlayerImage);
                                                string imgDataURL = string.Format("data:image/png;base64,{0}", imreBase64Data); ;
                                                <img src="@imgDataURL" style="height: 36px;max-width: inherit;border-radius: 50% !important" id="profile-img-tag" alt="avatar">
                                            }
                                            else
                                            {

                                                <img src="~/img/Default.png" style="height: 36px;max-width: inherit;border-radius: 50% !important" id="profile-img-tag" alt="avatar">
                                            }
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ScreenName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.LastName),  @Html.DisplayFor(modelItem => item.FirstName)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.EmailId)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.CreatedDateStr)
                                        </td>


                                        <td>
                                            @Html.DisplayFor(modelItem => item.NoOfTimesPlayed)
                                        </td>

                                        <td>
                                            @item.Address1 @item.StateName, @item.CountryName
                                        </td>
                                        <td>
                                            @if(item.Active)
                                            {
                                            <span style="color:green">@item.ActiveStr</span>
                                            }
                                            else{
                                            <span style="color:red" >@item.ActiveStr</span>
                                            }
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="copyright">
                            <p>Copyright © 2018 Fish For Cash. All rights reserved.</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <!-- END MAIN CONTENT-->
        <!-- END PAGE CONTAINER-->
    </div>

