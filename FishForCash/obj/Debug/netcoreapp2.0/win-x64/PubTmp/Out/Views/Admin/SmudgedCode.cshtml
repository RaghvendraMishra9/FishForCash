@model IEnumerable<FishForCash.Domain.Smudged.SmudgedModel>
@{
    ViewData["Title"] = "SmudgedCode";
    Layout = "_AdminLayout";
}

<div class="main-content">
    <div class="section__content section__content--p30">
        <div class="container-fluid">

            <div class="row">
                <div class="col-lg-12">
                    <h3 class="title-2 m-b-25">Smudged Gamecodes</h3>
                    <div class="table-responsive table--no-card m-b-40">
                        <table class="table  table-striped table-earning table-hover">
                            <thead>
                                <tr>
                                    <th>
                                       Played
                                    </th>
                                   
                                    <th>
                                        Smudged
                                    </th>
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        Code
                                    </th>

                                    <th>
                                        Expiry
                                    </th>

                                    <th>
                                        Product
                                    </th>

                                    <th>
                                        Replace
                                    </th>
                                    <th>
                                        Delete
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>@item.PLayerId</td>
                                    <td></td>
                                    <td>@item.Name</td>
                                    <td>@item.SmudgedCode</td>
                                    <td>@item.ExpiryDate</td>
                                    <td>@item.ProductName</td>
                                    <td> <a asp-controller="Admin" asp-action="SmudgedReplacement" asp-route-playerId="@item.PLayerId" asp-route-SmudgedCode="@item.SmudgedCode" class="btn btn-primary btn-block ">Send Replacement</a></td>
                                    <td>
                                        <a href="#" class="btn btn-danger btn-block">Delete</a>
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="copyright">
                        <p>Copyright © 2018 Fish For Cash. All rights reserved.</p>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <!-- END MAIN CONTENT-->
    <!-- END PAGE CONTAINER-->
</div>

